<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9" fx:controller="calculator.CalculatorController">
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox layoutX="-2.0" layoutY="-3.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="valueTextField" alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="201.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="7" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="8" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="9" />
                        <Button mnemonicParsing="false" onAction="#storeOperator" prefHeight="100.0" prefWidth="100.0" text="/" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="4" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="5" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="6" />
                        <Button mnemonicParsing="false" onAction="#storeOperator" prefHeight="100.0" prefWidth="100.0" text="x" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="1" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="2" />
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="3" />
                        <Button mnemonicParsing="false" onAction="#storeOperator" prefHeight="100.0" prefWidth="100.0" text="-" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleDigitButton" prefHeight="100.0" prefWidth="100.0" text="0" />
                        <Button mnemonicParsing="false" onAction="#clearAll" prefHeight="100.0" prefWidth="100.0" text="C" />
                        <Button mnemonicParsing="false" onAction="#computeAndStoreValue" prefHeight="100.0" prefWidth="100.0" text="=" />
                        <Button mnemonicParsing="false" onAction="#storeOperator" prefHeight="100.0" prefWidth="100.0" text="+" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
